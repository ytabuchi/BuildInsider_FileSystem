<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BI_FileSystem.SaveLoadXaml">
  <StackLayout Padding="10" Spacing="5" VerticalOptions="Center">
    <Entry x:Name="entry" Placeholder="Please input your name" />
    <StackLayout Orientation="Horizontal">
      <Button Text="Save" HorizontalOptions="FillAndExpand" Clicked="SaveClicked" />
      <Button Text="Load" HorizontalOptions="FillAndExpand" Clicked="LoadClicked" />
      <Button Text="Delete" HorizontalOptions="FillAndExpand" Clicked="DeleteClicked" />
    </StackLayout>
    <Label x:Name="loadedLabel" Text="Saved text will be displayed here when loaded."/>
  </StackLayout>
</ContentPage>